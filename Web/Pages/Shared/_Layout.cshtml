@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/loader.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/toastMessage.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />

	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>
<body>
	@{
		var uId = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier)?.Value;
	}
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-page="/Index">Web</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-page="/Index">Trang chủ</a>
						</li>
						@if (Context.User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/MyPayment">Lịch sử giao dịch</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/checkscore">Kiểm tra điểm</a>
							</li>
						}

						@if (Context.User.IsInRole("Supporter") || Context.User.IsInRole("Customer"))
						{
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/MyAssignment">Assignments</a>
							</li>
						}
					</ul>
					<ul class="navbar-nav">
						@if (Context.User.Identity.IsAuthenticated)
						{
							<li class="nav-item dropdown">
								<a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Cài đặt tài khoản
								</a>
								<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

									<a class="dropdown-item" href="./users/detail?uId=@uId">Trang cá nhân</a>
									<a class="dropdown-item" href="/accountsetting?uId=@uId">Cài đặt tài khoản</a>
									<a class="dropdown-item" href="/logout">Đăng Xuất</a>
									@if (Context.User.IsInRole("Admin"))
									{
										<a class="dropdown-item" href="/admin/dashboard">Trang quản trị</a>
									}
								</div>
							</li>
						}
						else
						{
							<li>
								<a class="nav-link text-dark" href="/login">Đăng Nhập</a>
							</li>
							<li>
								<a class="nav-link text-dark" href="/register">Đăng Kí</a>
							</li>
						}

					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>

	</div>


	@await Component.InvokeAsync("Chatbox")


	<div class="spinner-overlay">
		<div class="svg-frame">
			<div class="loader"></div>

		</div>

	</div>


	<footer class="border-top footer text-muted">
		<div class="container text-center">
			&copy; 2023 - Web
		</div>
	</footer>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/toastMessage.js" asp-append-version="true"></script>
	<script src="~/js/Notification.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
