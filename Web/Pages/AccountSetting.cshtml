@page 
@model Web.Pages.AccountSettingModel
@{
}

<div class="container-fluid">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-info">@Model.SuccessMessage</div>
    }
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action" onclick="showContent('personalInfo')">Thay đổi thông tin cá nhân</a>
                <a href="#" class="list-group-item list-group-item-action" onclick="showContent('changePassword')">Đổi mật khẩu</a>
                <a href="#" class="list-group-item list-group-item-action" onclick="showContent('changeEmail')">Đổi email</a>

            </div>
        </div>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div id="personalInfo" class="content-section">
                <form method="post">
                    <!-- Các trường input cho thông tin cá nhân -->
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </form>
            </div>
            <div id="changePassword" class="content-section" style="display: none;">
                <form method="post" class="form-group">
                    <input hidden asp-for="uId" value="@Model.uId"/>
                    <div class="mb-3">
                        <label for="oldPassword" class="form-label">Mật khẩu cũ</label>
                        <input type="password" class="form-control" id="oldPassword" asp-for="ChangePassword.OldPassword" required>
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Mật khẩu mới</label>
                        <input type="password" class="form-control" id="newPassword" asp-for="ChangePassword.NewPassword" required>
                    </div>
                    <div class="mb-3">
                        <label for="confirmNewPassword" class="form-label">Xác nhận mật khẩu mới</label>
                        <input type="password" class="form-control" id="confirmNewPassword" asp-for="ChangePassword.ConfirmNewPassword" required>
                    </div>
                    <button type="submit" class="btn btn-primary" asp-page-handler="ChangePass">Đổi mật khẩu</button>
                </form>
            </div>
            <div id="changeEmail" class="content-section" style="display: none;">
                <form method="post">
                    <!-- Các trường input cho đổi email -->
                    <button type="submit" class="btn btn-primary">Đổi email</button>
                </form>
            </div>
        </main>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script>
            function showContent(sectionId) {
                document.querySelectorAll('.content-section').forEach(function (el) {
                    el.style.display = 'none';
                });
                document.getElementById(sectionId).style.display = 'block';
            }

            // Hàm để lấy tham số từ URL
            function getQueryParam(param) {
                var searchParams = new URLSearchParams(window.location.search);
                return searchParams.get(param);
            }

            // Khi tải trang, kiểm tra tham số 'tab' và hiển thị tab tương ứng
            window.onload = function () {
                var activeTab = getQueryParam('tab');
                if (activeTab) {
                    showContent(activeTab);
                }
            };
        </script>
    }

}

