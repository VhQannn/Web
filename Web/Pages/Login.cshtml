@page
@model Web.Pages.LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

<style>
    /* Include the above CSS here */
</style>

<div class="login-form">
    <div class="banner">
        <img src="~/images/Login-Banner.png" class="img-fluid" />
    </div>
    <div class="form-container">
        <form method="post">
            <h2>Đăng nhập</h2>
            <div class="input-form">
                <input type="text" placeholder="Username" asp-for="@Model.Username" class="form-control" />
                <input type="password" placeholder="Mật khẩu" asp-for="@Model.Password" class="form-control" />
            </div>
            <div class="form-check">
                <input type="checkbox" id="rememberSwitch" asp-for="@Model.IsRemember" />
                <label for="rememberSwitch">Nhớ mật khẩu</label>
            </div>
            <div class="register-navigate">
                <p>Chưa có tài khoản? <a href="/register">Đăng ký ngay!</a></p>
                <a href="/forget-password">Quên mật khẩu</a>
            </div>
            <button class="btn btn-primary">Đăng Nhập</button>
        </form>
    </div>
</div>