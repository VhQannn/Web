@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    /* Add your custom CSS styles here */
    .my-3 {
        margin: 20px 0;
    }

    .text-center {
        text-align: center;
    }

    .search-bar {
        display: flex;
        align-items: center;
    }

    .search-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px 0 0 5px;
    }

    .search-button {
        background-color: transparent; /* Đặt màu nền là trong suốt */
        color: #007BFF; /* Màu biểu tượng kính lúp */
        border: none;
        padding: 10px 20px;
        border-radius: 0 5px 5px 0;
        cursor: pointer;
    }

        .search-button:hover {
            color: #0056b3; /* Màu biểu tượng khi hover */
        }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 0 10px;
        text-decoration: none;
        color: #fff;
        border-radius: 5px;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-primary {
        background-color: #007BFF;
    }

    .btn-secondary:hover {
        background-color: #545b62;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<div class="my-3">
    <form method="post">
        <div class="search-bar">
            <input class="search-input" type="text" placeholder="Search..." />
            <button type="submit" class="search-button">
                <i class="fa fa-search"></i> <!-- Font Awesome search icon -->
            </button>
        </div>
    </form>
</div>

<div class="my-5 text-center">
    <a href="#" class="btn btn-secondary">Check Legit</a>
    <a href="/createpost" class="btn btn-primary">Đăng bài</a>
</div>

<table class="table table-striped">
    <thead class="text-center">
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Post[0].PostTitle) *@
                Tiêu Đề
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Post[0].PostContent) *@
                Nội Dung
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Post[0].DateSlot) *@
                Ngày Thi
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Post[0].TimeSlot) *@
                Thời gian
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Post[0].Status) *@
                Trạng thái
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Post[0].PostCategory) *@
                Môn
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Post[0].User) *@
                Người nhận
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>

</table>

<p>Trang: <span id="currentPage"></span> / <span id="totalPages"></span></p>


<div class="pagination">
    <button id="prevPage">Trước</button>
    <span id="currentPage">1</span>
    <button id="nextPage">Sau</button>
</div>
