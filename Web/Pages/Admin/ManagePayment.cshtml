@page "/admin/manage-payments"
@model Web.Pages.PaymentsModel

@{
    ViewData["Title"] = "Quản lý thanh toán";
    Layout = "admin_layout";
}
<head>
    <link rel="stylesheet" href="~/css/ManagePayment.css" />
</head>
<h2>@ViewData["Title"]</h2>

<!-- Combined form for search and status filter -->
<form method="get" class="search-form">
    <input type="text" name="Username" value="@Model.Username" placeholder="Search by username" />
    <input type="number" name="PaymentId" value="@Model.PaymentId" placeholder="Search by payment ID" />

    <!-- Include the status filter as a hidden field -->
    <input type="hidden" name="StatusFilter" value="@Model.StatusFilter" />

    <button type="submit">Search</button>
</form>

<!-- Status filter buttons -->
<div class="status-filters">
    <a asp-page="./ManagePayment" asp-route-Username="@Model.Username" asp-route-PaymentId="@Model.PaymentId" asp-route-StatusFilter="All" class="btn @(Model.StatusFilter == "All" ? "btn-primary" : "btn-default")">All</a>
    <a asp-page="./ManagePayment" asp-route-Username="@Model.Username" asp-route-PaymentId="@Model.PaymentId" asp-route-StatusFilter="Pending" class="btn @(Model.StatusFilter == "Pending" ? "btn-primary" : "btn-default")">Pending</a>
    <a asp-page="./ManagePayment" asp-route-Username="@Model.Username" asp-route-PaymentId="@Model.PaymentId" asp-route-StatusFilter="Completed" class="btn @(Model.StatusFilter == "Completed" ? "btn-primary" : "btn-default")">Completed</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Payment ID</th>
            <th>Status</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model.Payments)
        {
            <tr>
                <td>@payment.PaymentId</td>
                <td style="color: @(payment.Status == "COMPLETED" ? "#006400" : "#D5B006");"><b>@payment.Status</b></td>
                <td>@payment.User.Username</td>
                <td>
                    <div style="display: flex; gap: 10px;">
                        <form method="post" asp-page-handler="UpdateStatus" style="margin: 0;">
                            <input type="hidden" name="paymentId" value="@payment.PaymentId" />
                            <input type="hidden" name="newStatus" value="PENDING" />
                            <input type="hidden" name="Username" value="@Model.Username" />
                            <input type="hidden" name="paymentIdFilter" value="@Model.PaymentId" />
                            <input type="hidden" name="StatusFilter" value="@Model.StatusFilter" />             
                            <button type="submit" class="btn btn-warning">Set Pending</button>
                        </form>
                        <form method="post" asp-page-handler="UpdateStatus" style="margin: 0;">
                            <input type="hidden" name="paymentId" value="@payment.PaymentId" />
                            <input type="hidden" name="newStatus" value="COMPLETED" />
                            <input type="hidden" name="Username" value="@Model.Username" />
                            <input type="hidden" name="paymentIdFilter" value="@Model.PaymentId" />
                            <input type="hidden" name="StatusFilter" value="@Model.StatusFilter" />
                            <button type="submit" class="btn btn-success">Set Completed</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="custom-pagination">
            <!-- Your existing pagination controls here -->
        </ul>
    </nav>
}


@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="custom-pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-page="./ManagePayment" asp-route-currentPage="@(Model.CurrentPage - 1)">Previous</a>
            </li>

            @if (Model.CurrentPage > 2)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="./ManagePayment" asp-route-currentPage="1">1</a>
                </li>
                @if (Model.CurrentPage > 3)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="./ManagePayment" asp-route-currentPage="@(Model.CurrentPage - 1)">
                        @(Model.CurrentPage - 1)
                    </a>
                </li>
            }

            <li class="page-item active">
                <a class="page-link" asp-page="./ManagePayment" asp-route-currentPage="@Model.CurrentPage">@Model.CurrentPage</a>
            </li>

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="./ManagePayment" asp-route-currentPage="@(Model.CurrentPage + 1)">
                        @(Model.CurrentPage + 1)
                    </a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages - 1)
            {
                @if (Model.CurrentPage < Model.TotalPages - 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item">
                    <a class="page-link" asp-page="./ManagePayment" asp-route-currentPage="@Model.TotalPages">
                        @Model.TotalPages
                    </a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-page="./ManagePayment" asp-route-currentPage="@(Model.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}

